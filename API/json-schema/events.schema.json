{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "events.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["filters", "total", "items"],
  "properties": {
    "filters": {
      "type": "object",
      "additionalProperties": false,
      "required": ["day", "venueId", "performerId"],
      "properties": {
        "day": {
          "type": "string",
          "pattern": "^$|^\\d{4}-\\d{2}-\\d{2}$"
        },
        "venueId": {
          "type": "string",
          "pattern": "^$|^v_[a-z0-9_]+$"
        },
        "performerId": {
          "type": "string",
          "pattern": "^$|^p_[a-z0-9_]+$"
        }
      }
    },
    "total": {
      "type": "integer",
      "minimum": 0
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "date",
          "startTime",
          "endTime",
          "venue",
          "performer",
          "description"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^e_[a-z0-9_]+$"
          },
          "title": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "startTime": {
            "type": "string",
            "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
          },
          "endTime": {
            "type": "string",
            "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
          },
          "venue": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^v_[a-z0-9_]+$"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "performer": {
            "type": "object",
            "additionalProperties": false,
            "required": ["id", "name"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^p_[a-z0-9_]+$"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "performers.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["page", "pageSize", "totalItems", "totalPages", "items"],
  "properties": {
    "page": {
      "type": "integer",
      "minimum": 1
    },
    "pageSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100
    },
    "totalItems": {
      "type": "integer",
      "minimum": 0
    },
    "totalPages": {
      "type": "integer",
      "minimum": 0
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "category", "specialty", "country", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^p_[a-z0-9_]+$"
          },
          "name": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["music", "chef"]
          },
          "specialty": {
            "type": "string"
          },
          "country": {
            "type": "string",
            "pattern": "^[A-Z]{2}$"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}

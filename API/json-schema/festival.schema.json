{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "festival.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "description",
    "dates",
    "location",
    "links",
    "tickets"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "dates": {
      "type": "object",
      "additionalProperties": false,
      "required": ["start", "end"],
      "properties": {
        "start": {
          "type": "string",
          "format": "date"
        },
        "end": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "location": {
      "type": "object",
      "additionalProperties": false,
      "required": ["siteName", "city", "country", "timezone"],
      "properties": {
        "siteName": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "pattern": "^[A-Z]{2}$"
        },
        "timezone": {
          "type": "string",
          "pattern": "^[A-Za-z_]+/[A-Za-z_]+$"
        }
      }
    },
    "links": {
      "type": "object",
      "additionalProperties": false,
      "required": ["website", "tickets", "instagram", "facebook"],
      "properties": {
        "website": {
          "type": "string",
          "format": "uri"
        },
        "tickets": {
          "type": "string",
          "format": "uri"
        },
        "instagram": {
          "type": "string",
          "format": "uri"
        },
        "facebook": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "tickets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "tier", "validDays", "price", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^t_[a-z0-9_]+$"
          },
          "name": {
            "type": "string"
          },
          "tier": {
            "type": "string",
            "enum": ["basic", "gastro", "vip"]
          },
          "validDays": {
            "type": "integer",
            "minimum": 1,
            "maximum": 3
          },
          "price": {
            "type": "object",
            "additionalProperties": false,
            "required": ["amount", "currency"],
            "properties": {
              "amount": {
                "type": "number",
                "minimum": 0,
                "maximum": 20000
              },
              "currency": {
                "type": "string",
                "enum": ["CZK", "EUR"]
              }
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}

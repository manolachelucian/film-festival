{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "event.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "title",
    "date",
    "startTime",
    "endTime",
    "venue",
    "performer",
    "description"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^e_[a-z0-9_]+$"
    },
    "title": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "startTime": {
      "type": "string",
      "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
    },
    "endTime": {
      "type": "string",
      "pattern": "^([01][0-9]|2[0-3]):[0-5][0-9]$"
    },
    "venue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^v_[a-z0-9_]+$"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "performer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^p_[a-z0-9_]+$"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "description": {
      "type": "string"
    }
  }
}
